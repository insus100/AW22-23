<%- include('partials/header') -%>
<%- include(`partials/nav-${user.roleName}`) -%>
<table class="table table-dark m-auto table-striped table-hover w-75">
    <thead>
        <tr>
            <!--<th scope="col">Fecha</th>
            <th scope="col">Texto</th>
            <th scope="col">Tipo</th>
            <th scope="col">Técnico</th>-->
            <% columns.forEach(c => { %>
              <% if(c.roles && c.roles.includes(user.role) && c.show !== false){ %>
                <th scope="col"><%= c.name %></th>
              <% } %>
            <% });%>
        </tr>
    </thead>
    <tbody>
      <% dataArray.forEach(d => { %>
        <% if(page !== 'usuarios') { %>
          <tr onclick="openModal(<%= JSON.stringify(d) %>)">
        <% } else { %>
          <tr>
        <% } %>
          <% columns.forEach(c => { %>
            <% if(c.roles && c.roles.includes(user.role) && c.show !== false){ %>
              <% if(c.render === "accionesTecnico"){ %>
                <td>
                  <div class="btn-group" role="group" aria-label=" ">
                    <!--<button type="button" class="btn btn-success"><i class="bi bi-eye"></i></button>-->
                    <a onclick="stopEventPropagation(event)" title="Eliminar aviso" class="btn btn-danger" href="/deleteAviso/<%= d.id %>"><i class="bi bi-trash3"></i></a>
                  </div>
                </td>
              <% } else if(c.render === 'accionesEntrantes'){ %>
                <td>
                  <div class="btn-group" role="group" aria-label=" ">
                    <button type="button" class="btn btn-success" title="Asignar técnico" onclick="asignarTecnico(event, <%= d.id %>, <%= JSON.stringify(d) %>)" <%= d.tecnicoId ? 'disabled' : '' %>><i class="bi bi-person-plus-fill"></i></button>
                    <a onclick="stopEventPropagation(event)" title="Eliminar aviso" class="btn btn-danger <%= d.tecnicoId && d.tecnicoId !== user.id ? 'disabled' : '' %>" href="<%= d.tecnicoId && d.tecnicoId !== user.id ? '#' : '/deleteAviso/' + d.id %>"><i class="bi bi-trash3"></i></a>
                  </div>
                </td>
              <% } else if(c.render === 'accionesUsuarios'){ %>
                <td>
                  <div class="btn-group" role="group" aria-label=" ">
                    <a onclick="stopEventPropagation(event)" title="Desactivar usuario" class="btn btn-danger" href="/disableUser/<%= d.id %>"><i class="bi bi-trash3"></i></a>
                  </div>
                </td>
              <% } else if(c.render === 'role'){ %>
                <td class="role"><%= d[c.data] %></td>
              <% } else if(c.render === 'date'){ %>
                <td class="dontbreak"><%= d[c.data] %></td>
              <% } else if(c.data === 'tipo'){ %>
                <td class="tipoAviso"><%= d[c.data] %></td>
              <% } else if(typeof d[c.data] === 'string'){ %>
                <td><p class="break"><%= d[c.data].slice(0, 200) %></p></td>
              <% } else { %>
                <td><%= d[c.data] %></td>
              <% } %>
            <% } %>
          <% });%>
        </tr>
      <% });%>
        <!--<tr onclick="openModal()">
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>@mdo</td>
        </tr>
        <tr onclick="openModal()">
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td>@fat</td>
        </tr>
        <tr onclick="openModal()">
            <th scope="row">3</th>
            <td colspan="2">Larry the Bird</td>
            <td>@twitter</td>
        </tr>-->
    </tbody>
</table>
<% if(user.roleName === 'usuario'){ %>
  <div class="mt-4 m-auto w-75">
    <button type="button" class="btn btn-primary" onclick="nuevoAviso()">Nuevo aviso</button>
  </div>
<% } %>
<div style="height: 200vh;"></div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content bg-dark text-white">
        <div class="modal-header">
          <h1 class="modal-title fs-4" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body hide" id="modal-body-aviso">
          <p class="mb-0 fs-5" id="modalFecha">Fecha:</p>
          <p class="mb-0 fs-5" id="modalTipo">Tipo:</p>
          <p class="mb-0 fs-5" id="modalCreador">Creador:</p>
          <p class="mb-0 fs-5" id="modalPerfil">Perfil:</p>
          <div class="mt-3 form-floating">
            <textarea class="form-control bg-dark text-white" placeholder="Observación" id="floatingTextarea2" style="height: 200px"></textarea>
            <label for="floatingTextarea2">Observaciones</label>
          </div>
          <div id="divModalComentario" class="mt-4 form-floating hide">
            <textarea class="form-control bg-dark text-white" placeholder="Comentario" id="modalComentario" style="height: 200px"></textarea>
            <label for="floatingTextarea2">Comentarios</label>
          </div>
          <% if(tecnicos && user.roleName === 'tecnico') { %>
          <div class="mt-3" id="divTecnicos">
            <form method="POST" action="/asignarTecnico" onsubmit="return validarFormulario()">
              <div class="container">
                <div class="row">
                  <div class="col-12">
                    <label for="tecnicoSelect" class="form-label">Seleccione un técnico</label>
                    <select name="tecnico" id="tecnicoSelect" class="form-select bg-dark text-white" required>
                      <option selected disabled value="">Elige...</option>
                      <% tecnicos.forEach(t => { %>
                        <option value="<%= t.id %>"><%= t.username %></option>
                      <% });%>
                    </select>
                    <input name="idAviso" class="hide" type="number" id="inputIdAviso">
                  </div>
                  <div class="col-8">
                    <button type="submit" class="btn btn-primary mt-4 ml-5" id="submitAsignarTecnico">Asignar Técnico</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <% } %>
        </div>
        <div class="modal-body hide" id="modal-body-usuario">
          <div class="container">
            <div class="row">
              <div class="col-4"><img width="219" height="230" alt="<%= user.username %>" src="/imagenUsuario"></div>
              <div class="col">
                <h1><%= user.username %></h1>
                <div class="col-4">Fecha de creación: </div>
                <div class="col-4">Perfil: </div>
                <div class="col-4">Rol: </div>
                <div class="col-4">Contraseña: </div>
                <div class="col-8">Avisos realizados:</div>
                <div class="col-8">Incidencias:</div>
                <div class="col-8">Sugerencias:</div>
                <div class="col-8">Felicitaciones:</div>
              </div>
            </div>
            <div class="row">
              <div class="col-8"></div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <% if(user.roleName === 'tecnico' && page === 'avisos'){ %>
            <button type="button" class="btn btn-primary">Resolver aviso</button>
          <% } %>
        </div>
      </div>
    </div>
</div>
<%- include('partials/footer') -%>
<%- include('partials/header') -%>
<%- include(`partials/nav-${role.name}`) -%>
<table class="table table-dark m-auto table-striped table-hover w-75">
    <thead>
        <tr>
            <!--<th scope="col">Fecha</th>
            <th scope="col">Texto</th>
            <th scope="col">Tipo</th>
            <th scope="col">TÃ©cnico</th>-->
            <% columns.forEach(c => { %>
              <% if(c.roles.includes(role.index) && c.show !== false){ %>
                <th scope="col"><%= c.name %></th>
              <% } %>
            <% })%>
        </tr>
    </thead>
    <tbody>
        <tr onclick="openModal()">
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>@mdo</td>
        </tr>
        <tr onclick="openModal()">
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td>@fat</td>
        </tr>
        <tr onclick="openModal()">
            <th scope="row">3</th>
            <td colspan="2">Larry the Bird</td>
            <td>@twitter</td>
        </tr>
    </tbody>
</table>
<% if(role.name === 'usuario'){ %>
  <div class="mt-4 m-auto w-75">
    <button type="button" class="btn btn-primary" onclick="nuevoAviso()">Nuevo aviso</button>
  </div>
<% } %>
<div style="height: 200vh;"></div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
</div>
<%- include('partials/footer') -%>